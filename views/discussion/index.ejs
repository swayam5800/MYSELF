<%- include('../partials/header dm') -%>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-8 well" style="background: rgba(44, 53, 59, 0.5);">
        <header class="jumbotron" style=" background: #1f2833; height: 250px; padding-top: 5px; padding-bottom: 0px;">
            <div class="container">
                <p style=" font-weight: 700; font-size: 90px; padding-top: 0px; color:white; text-align: center; font-family: 'Lexend Tera', sans-serif;">Discussion</p>
                <p style=" font-weight: 500; color: white; font-size: 23px; text-align: center; font-family: 'Gloria Hallelujah', cursive;">
                    Ask your doubt,and help other!!
                </p>
                <p style="text-align: right;">
                    <a class="btn btn-link btn-lg" href="/discussions/new" >Create discussion</a>
                </p>
            </div>
        </header>
        <% discussion.forEach(function(allcol){%>
            <div class="well" style="background: #88bdbc; border: 2px solid;">
                <div class="caption">
                    <h3 style=" color: #080f5b; font-family: 'Noto Serif JP', serif; padding-bottom: 7px;"><%= allcol.topic %></h3>
                </div>
                <hr style="width: 60%;margin: 0px; align-content: center; border-style: ridge;">
                <div class="caption " >
                    <h4 style="font-weight: 600;  padding-top: 12px; padding-left: 5px; line-height: 1.5; padding-bottom: 9px; font-family: 'Roboto Slab', serif;"><%= allcol.question %></h4>
                </div>
                <p >
                    <a href="/discussions/<%=allcol._id %>" class="btn btn-info" style="font-size: 16px;" >Disscusion</a>
                </p>
            </div>
            <% console.log(allcol.topic) %>
        <% }); %>
        </div>
    </div> 
</div>   
    
    
<%- include('../partials/footer') -%>