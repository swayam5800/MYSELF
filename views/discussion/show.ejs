<%- include('../partials/header lr') -%>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 well " style="background: rgba(26,26,29,0.8);">
            <iframe class=" well" height="220"  src="https://www.youtube.com/embed/nqowUJzG-iM" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <iframe class=" well"  height="205" src="https://www.youtube.com/embed/2frmG3Z_PRo" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <iframe  class=" well"height="220" src="https://www.youtube.com/embed/P3YID7liBug" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <iframe class=" well"  height="220" src="https://www.youtube.com/embed/JiMcwYYZhtc" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="col-md-7 col-sm-12">
            <div class="thumbnail" style="background: rgba(20, 54, 90, 0.8); padding: 20px 20px; padding-bottom: 10px;">
                <div class="thumbnail"  style="text-align: center; background-color: #6a93cb;
                background-image: linear-gradient(315deg, #6a93cb 0%, #a4bfef 74%);">
                    <h1 style="color: #2c3531; font-weight: 900; font-family: 'Russo One', sans-serif;"><%= discussion.topic%></h1> 
                </div>
                <div class="thumbnail" style="font-size: 18px; padding: 30px 20px; padding-bottom: 10px; background-color: #b8c6db;
                background-image: linear-gradient(315deg, #b8c6db 0%, #f5f7fa 74%);">
                    <p style="font-family: 'Libre Franklin', sans-serif;"><%= discussion.question%></p>
                    <hr id="topicshow" style="width: 60%; align-content: center;border-width: 1px ; border-style: solid; background-color:black; margin-top: 20px; margin-bottom: 10px; ">
                    <p><em style="font-family: 'Roboto Slab', serif; font-weight: 500;">Asked by <%=discussion.author.username %></em></p>
                    <%if(currentUser && discussion.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-xs btn-warning" href="/discussions/<%=discussion._id%>/edit">Edit</a>
                        <form id="delet-form" action="/discussions/<%=discussion._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well" style="background: rgba(77, 109, 154,0.6);">
                <div class="text-right">
                    <a class="btn btn-danger btn-large" href="/discussions/<%=discussion._id%>/comments/new">Add your Suggestion</a>
                </div>
                <hr>
                <% discussion.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="jumbotron jumbotron-fluid " style="padding: 20px 40px; margin-bottom: 0px; font-size: 10px; background-color: #ffffff;
                            background-image: linear-gradient(315deg, #ffffff 0%, #d7e1ec 74%);">
                                <strong style="font-size: 18px; font-family: 'Roboto Slab', serif;"><%= comment.author.username%></strong>
                                <span class="pull-right" style="font-size: 14px;">Suggested on <%=comment.time1%></span>
                                <hr style="width: 60%; align-content: center; border-style: ridge; margin-top: 12px;">
                                <p style="font-family: 'Libre Franklin', sans-serif;">
                                    <%= comment.text %>
                                </p>


                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-sm btn-warning" href="/discussions/<%= discussion._id %>/comments/<%=comment._id %>/edit">Edit</a>
                                    <form id="delet-form" action="/discussions/<%= discussion._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST" >
                                        <button class="btn btn-sm btn-danger ">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                            <hr style="width: 60%; align-content: center; border-style: ridge;">
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <div class="col-md-2">
            <p class="lead" style="text-align: center; margin-bottom: 5px;font-family: 'IBM Plex Serif', serif; font-size: 24px; border-bottom: 0.2px solid; color: #ac3b61;">You May Prefer</p>
            <div class="list-group">
                <li class="list-group-item" style="font-size: 20px; background: linear-gradient(to top, #25274d 16%, #2e9cca 100%); font-family: 'Raleway', sans-serif; "><a href="https://www.geeksforgeeks.org/binary-search/" style="color: #ffffff; ">Binary search</a></li>
                <li class="list-group-item" style="font-size: 20px; background: linear-gradient(to top, #25274d 16%, #2e9cca 100%); font-family: 'Raleway', sans-serif;"><a href="https://www.geeksforgeeks.org/dynamic-programming/" style="color: #ffffff; ">Dynamic Programing</a></li>
                <li class="list-group-item" style="font-size: 20px; background: linear-gradient(to top, #25274d 16%, #2e9cca 100%); font-family: 'Raleway', sans-serif;"><a href="https://www.geeksforgeeks.org/binary-search-tree-data-structure/"style="color: #ffffff; ">Binary search tree</a></li>
                <li class="list-group-item" style="font-size: 20px; background: linear-gradient(to top, #25274d 16%, #2e9cca 100%); font-family: 'Raleway', sans-serif;"><a href="https://www.geeksforgeeks.org/depth-first-search-or-dfs-for-a-graph/" style="color: #ffffff; ">Dfs tree</a></li>
                <li class="list-group-item" style="font-size: 20px; background: linear-gradient(to top, #25274d 16%, #2e9cca 100%); font-family: 'Raleway', sans-serif;"><a href="https://www.geeksforgeeks.org/graph-data-structure-and-algorithms/" style="color: #ffffff; ">Graphs</a></li>
            </div>
        </div>
    </div>
</div>
 <%- include('../partials/footer') -%>