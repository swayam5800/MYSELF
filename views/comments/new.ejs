                    <textarea id="sug" class="form-control" name="comment[text]" rows="5" cols="90" ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg">Submit!!</button>
                </div>
            </form>
        </div>

    </div>
</div>
